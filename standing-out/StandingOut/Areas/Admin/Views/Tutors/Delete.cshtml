@model StandingOut.Data.Models.User

@{
    ViewData["Title"] = "Delete Tutor";
}

<div class="grid-container">
    <div class="grid-x">
        <div class="large-3 cell"></div>
        <div class="large-6 cell">
            <div class="card card--hasGrid margin-x-auto margin-y-extra-loose">
                <div class="grid-x align-middle">
                    <div class="large-12 cell text-align-center">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                </div>
                <hr class="margin-top-base margin-bottom-base" />
                <section class="form text-align-center">
                    <form asp-antiforgery="true">
                        <input type="hidden" name="id" asp-for="Id" />
                        <p class="margin-top-extra-tight padding-x-expansive">Are you sure you want to delete the tutor profile for <strong>@Model.Email?</strong> The user will be reverted to a student.</p>
                        <div class="display--flex margin-left-auto margin-right-auto margin-top-base width--max-content">
                            <a asp-action="Index" asp-controller="Tutors" class="button button--secondary margin-right-tight">Cancel</a>
                            <button type="submit" class="button button--distructive" value="Yes">@ViewData["Title"]</button>
                        </div>
                    </form>
                </section>
            </div>
            <div class="large-1 cell"></div>
        </div>
    </div>
    <div class="large-3 cell"></div>
</div>