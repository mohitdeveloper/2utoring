    <link href='https://fonts.googleapis.com/css?family=Open Sans' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">

    <link href="~/lib/foundation-datepicker/css/foundation-datepicker.min.css" rel="stylesheet" type="text/css" />

    @RenderSection("styles", required: false)
</head>
<body ng-app="standingOut">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KNRHDFL"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <div class="header">
        <div>
            <div class="header__logo">2utoring Learning Experience</div>
        </div>
        <div>
            <nav class="navigation">
                <div class="navigation__item">
                    <a asp-controller="Users" asp-action="Index">
                        <div class="item__icon">
                            <i class="fal fa-users-crown"></i>
                            <div>Admin Users</div>
                        </div>
                    </a>
                </div>
                <div class="navigation__item">
                    <a asp-controller="Tutors" asp-action="Index">
                        <div class="item__icon">
                            <i class="fal fa-chalkboard-teacher"></i>
                            <div>Tutors</div>
                        </div>
                    </a>
                </div>
                <div class="navigation__item">
                    <a asp-controller="Students" asp-action="Index">
                        <div class="item__icon">
                            <i class="fal fa-users"></i>
                            <div>Students</div>
                        </div>
                    </a>
                </div>
                <div class="navigation__item">
                    <a asp-controller="ClassSessions" asp-action="Index">
                        <div class="item__icon">
                            <i class="fal fa-users-class"></i>
                            <div>Sessions</div>
                        </div>
                    </a>
                </div>
                <div class="navigation__item">
                    <a asp-controller="ManagementInfo" asp-action="Index">
                        <div class="item__icon">
                            <i class="fal fa-users-class"></i>
                            <div>Management Info</div>
                        </div>
                    </a>
                </div>
                <div class="navigation__item">
                    <a asp-controller="Safeguarding" asp-action="Index">
                        <div class="item__icon">
                            <i class="fal fa-exclamation"></i>
                            <div>Safeguarding</div>
                        </div>
                    </a>
                </div>
                <div class="navigation__item">
                    <a asp-controller="Companys" asp-action="Index">
                        <div class="item__icon">
                            <i class="fal fa-life-ring"></i>
                            <div>Companies</div>
                        </div>
                    </a>
                </div>
            </nav>
        </div>
        <div class="header__controls padding-right-base">
            <div class="controls__userLoggedIn">
                @await Component.InvokeAsync("AdminProfile")
            </div>
        </div>
    </div>
    <div class="view view--headerVisibleFooterHidden">
        <div class="view__panel">
            @RenderBody()
        </div>
    </div>

    <div class="loading" style="display:none">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>


    <environment names="Development,Staging,Production">
        <!-- Global JS that doesn't change -->

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/foundation-sites/dist/js/foundation.min.js"></script>

        <script type="text/javascript" src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="~/lib/datatables.net-zf/js/dataTables.foundation.min.js"></script>
        <script type="text/javascript" src="~/lib/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
        <script type="text/javascript" src="~/lib/datatables.net-buttons-zf/js/buttons.foundation.min.js"></script>
        <script type="text/javascript" src="~/lib/datatables.net-buttons/js/buttons.colVis.min.js"></script>
        <script type="text/javascript" src="~/lib/datatables.net-buttons/js/buttons.print.min.js"></script>
        <script type="text/javascript" src="~/lib/datatables.net-colreorder-zf/js/colReorder.foundation.min.js"></script>
        <script type="text/javascript" src="~/lib/datatables.net-fixedcolumns-zf/js/fixedColumns.foundation.min.js"></script>
        <script type="text/javascript" src="~/lib/datatables.net-fixedheader-zf/js/fixedHeader.foundation.min.js"></script>
        <script type="text/javascript" src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
        <script type="text/javascript" src="~/lib/datatables.net-responsive-zf/js/responsive.foundation.min.js"></script>

        <script src="//cdn.ckeditor.com/4.7.0/standard/ckeditor.js"></script>

        <script src="~/lib/underscore/underscore-min.js"></script>
        <script src="~/lib/moment/moment.js"></script>

        <script type="text/javascript" src="~/lib/foundation-datepicker/js/foundation-datepicker.min.js"></script>

        @*
            Don't use this for modal service!
            <script src="~/lib/magnific-popup/dist/jquery.magnific-popup.js"></script>
        *@

        <script src="~/lib/toastr/toastr.js"></script>

        <script src="~/app/common/formatStr.prototype.js"></script>
        <script src="~/app/common/slug.prototype.js"></script>
        <script src="~/app/common/global.js"></script>
    </environment>

    <environment names="Development">
        <!-- Development versions of Angular (easier to debug) -->

        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/angular-resource/angular-resource.js"></script>
        <script src="~/lib/angular-messages/angular-messages.js"></script>
        <script src="~/lib/angular-cookies/angular-cookies.js"></script>
        <script src="~/lib/angular-sanitize/angular-sanitize.js"></script>

        <script src="~/lib/angular-modal-service/dst/angular-modal-service.js"></script>
        <script src="~/lib/ng-file-upload/dist/ng-file-upload-shim.js"></script>
        <script src="~/lib/ng-file-upload/dist/ng-file-upload-all.js"></script>
        <script src="~/lib/ng-sortable/dist/ng-sortable.js"></script>
        <script src="~/lib/html2canvas/dist/html2canvas.js"></script>
    </environment>

    <environment names="Staging,Production">
        <!-- Production versions of Angular (faster loading) -->

        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/angular-resource/angular-resource.js"></script>
        <script src="~/lib/angular-messages/angular-messages.js"></script>
        <script src="~/lib/angular-cookies/angular-cookies.js"></script>
        <script src="~/lib/angular-sanitize/angular-sanitize.js"></script>

        <script src="~/lib/angular-modal-service/dst/angular-modal-service.js"></script>
        <script src="~/lib/ng-file-upload/dist/ng-file-upload-shim.js"></script>
        <script src="~/lib/ng-file-upload/dist/ng-file-upload-all.js"></script>
        <script src="~/lib/ng-sortable/dist/ng-sortable.js"></script>
        <script src="~/lib/html2canvas/dist/html2canvas.js"></script>
