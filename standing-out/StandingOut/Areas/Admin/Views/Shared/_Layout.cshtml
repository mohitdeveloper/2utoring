    <environment names="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <link href="~/lib/toastr/build/toastr.min.css" rel="stylesheet" />
    <link href="~/fonts/font-awesome-5.7.2/css/all.css" rel="stylesheet" />


    <link rel="stylesheet" type="text/css" href="~/lib/datatables.net-zf/css/dataTables.foundation.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/datatables.net-buttons-zf/css/buttons.foundation.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/datatables.net-colreorder-zf/css/colReorder.foundation.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/datatables.net-fixedcolumns-zf/css/fixedColumns.foundation.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/datatables.net-fixedheader-zf/css/fixedHeader.foundation.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/datatables.net-responsive-zf/css/responsive.foundation.min.css" />

    <link rel="stylesheet" type="text/css" href="~/lib/ng-sortable/dist/ng-sortable.min.css" />
