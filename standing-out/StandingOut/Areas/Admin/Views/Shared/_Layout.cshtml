            <script src="~/lib/ng-file-upload/dist/ng-file-upload-all.min.js"></script>
            <script src="~/lib/ng-sortable/dist/ng-sortable.min.js"></script>
            <script src="~/lib/html2canvas/dist/html2canvas.min.js"></script>*@
    </environment>

    <environment names="Development,Staging,Production">
        <!-- Our Angular Files -->
        <!-- Angular Directives -->
        <script asp-append-version="true" src="~/app/app.services.js"></script>
        <script asp-append-version="true" src="~/app/app.controllers.js"></script>
        <script asp-append-version="true" src="~/app/app.directives.js"></script>

        <!-- Custom Directives -->
        <script asp-append-version="true" src="~/app/directives/dynamicdatepicker.directive.js"></script>

        <!-- Generic Delete Confirm -->
        <script asp-append-version="true" src="~/app/delete/deleteModal.controller.js"></script>
        <script asp-append-version="true" src="~/app/services/delete.service.js"></script>

        <!-- Generic Alert Confirm -->
        <script asp-append-version="true" src="~/app/alertPop/alertPopModal.controller.js"></script>
        <script asp-append-version="true" src="~/app/services/alertPop.service.js"></script>

        <script asp-append-version="true" src="~/app/app.js"></script>

        <!-- Custom Services -->
        <script asp-append-version="true" src="~/app/services/dragdrop.service.js"></script>
        <script asp-append-version="true" src="~/app/services/classSessions.service.js"></script>
        <script asp-append-version="true" src="~/app/services/managementInfos.service.js"></script>
        <script asp-append-version="true" src="~/app/services/companys.service.js"></script>
        <script asp-append-version="true" src="~/app/services/companyTutors.service.js"></script>

        <!-- Custom Controllers -->
        <script asp-append-version="true" src="~/app/managementInfo/managementInfo.controller.js"></script>
        <script asp-append-version="true" src="~/app/companys/company.controller.js"></script>
    </environment>

    <script>
        $(document).foundation();

        $(".has-children").click(function () {
            $(this).siblings("ul").slideToggle();
        });

        $('.menu li:first a').mouseenter().mouseleave();

        $(document).ready(function () {
            // Slide Down menu
            $('#menu > li:has(>ul)').mouseover(function () {
                $(this).children('ul').slideDown('medium');
            });
            $('#menu > li').mouseleave(function () {
                $('#menu > li:has(>ul)').children('ul').slideUp('medium');
            });
        })
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
