<body ng-app="standingOut">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KNRHDFL"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <div class="so-header">
        <div class="small-12 so-header-wrapper hide-for-small-only">
            <div class="so-page-wrapper-sm">
                <div class="so-header-container">
                    <div class="so-header-logo">
                        <a href="/">
                            <img src="~/images/2utoringlogo.png" alt="2utoring" />
                        </a>
                    </div>
                    <nav class="navigation">
                        <div class="navigation__item">
                            <a href="/search/organisations">Find-an-Organisation</a>
                        </div>
                        <div class="navigation__item">
                            <a href="/search/tutors">Find-a-Tutor</a>
                        </div>
                        <div class="navigation__item">
                            <a href="/search">Search</a>
                        </div>
                        @*<div class="navigation__item">
                                <a href="/tutorsignup">Tutor Sign Up</a>
                            </div>*@
                        <div class="navigation__item">
                            <a href="/contactus">Contact Us</a>
                        </div>
                    </nav>
                    <div class="header__controls">
                        <div class="controls__userLoggedIn">
                            @await Component.InvokeAsync("MyProfileHeader")
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <!-- Toggle for the Burger Menu-->
        <div class="title-bar show-for-small-only clearfix" data-responsive-toggle="responsive-menu">
            <a href="/">
                <img src="~/images/2utoringlogo.png" alt="2utoring" width="120" />
            </a>
            <button type="button" data-toggle>
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <!-- mobile menu-->
        <div class="top-bar show-for-small-only" id="responsive-menu">
            <div class="top-bar-left">
                <ul class="menu" data-responsive-menu="accordion">
                    <li><a href="/search/organisations">Find-an-Organisation</a></li>
                    <li><a href="/search/tutors">Find-a-Tutor</a></li>
                    <li><a href="/search">Search</a></li>
                    <li><a href="/contactus">Contact Us</a></li>
                    <li>
                        <div class="so-user-information-container">
                            @await Component.InvokeAsync("MyProfileHeader")
                        </div>
                    </li>
                </ul>
            </div>
        </div>

    </div>

    <div class="view view--headerVisibleFooterHidden">
        <div class="view__panel">
            @RenderBody()
        </div>
    </div>
    <div class="loading" style="display:none">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>


    <environment names="Development,Staging,Production">
        <!-- Global JS that doesn't change -->

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/foundation-sites/dist/js/foundation.min.js"></script>

