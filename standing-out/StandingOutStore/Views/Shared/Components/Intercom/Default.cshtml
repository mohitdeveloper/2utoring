            "isCompany": @Html.Raw((bool)ViewData["isCompany"] == true ? "true" : "false"),
            "isTutor": @Html.Raw((bool)ViewData["isTutor"] == true ? "true" : "false"),
            "isParent": @Html.Raw((bool)ViewData["isParent"] == true ? "true" : "false"),
