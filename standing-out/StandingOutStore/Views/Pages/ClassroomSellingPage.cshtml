@{
    ViewData["Title"] = "Our Virtual Classroom";
}

@section meta{
    <meta name="title" content="@ViewData["Title"]" />
    <meta name="description" content="Join as a tutor on 2utoring to sell your classes to students worldwide and teach your lessons through our online classroom." />
}

<div class="Page__Container Page__Container--size:content my-28 my-lg-84">
    <div class="row">
        <div class="col-12 text-center">
            <div class="my-56">
                <h1 class="cl-primary fs-50 fw-800">Freedom to teach from anywhere</h1>
                <p class="fs-21 lh-21 fw-500 mt-21">Teach wherever you are with our virtual classroom</p>
                @if (ViewBag.ShowBecomeTutorLinks)
                {
                    <a asp-route="TutorPlans" class="btn btn-accent btn-lg fs-18 cl-white w-100 w-lg-auto px-49 mt-21">Get started</a>
                }
            </div>
            <img src="~/images/classroom-ui.png" alt="2utoring Classroom" class="w-100 my-56" />
        </div>
    </div>
</div>

<div class="Page__Container Page__Container--size:content my-28 my-lg-84">
    <div class="row">
        <div class="col-12 text-center">
            <div class="my-56">
                <h2 class="cl-primary fs-50 fw-800">You choose how you teach</h2>
                <p class="fs-21 lh-21 fw-500 mt-21">Deliver lessons using a variety of different teaching methods - all at the same times</p>
            </div>
        </div>
        <div class="col-12">
            <div class="row">
                <div class="col-6 col-lg-2 my-14 offset-lg-1">
                    <div class="card">
                        <div class="card-body text-center">
                            <img src="~/images/one-to-one.png" alt="2utoring Classroom" height="100" width="100" />
                            <div class="fw-700 fs-16 mt-14">One to One</div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-lg-2 my-14">
                    <div class="card">
                        <div class="card-body text-center">
                            <img src="~/images/one-to-group.png" alt="2utoring Classroom" height="100" width="100" />
                            <div class="fw-700 fs-16 mt-14">One to Group</div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-lg-2 my-14">
                    <div class="card">
                        <div class="card-body text-center">
                            <img src="~/images/peer-to-peer.png" alt="2utoring Classroom" height="100" width="100" />
                            <div class="fw-700 fs-16 mt-14">Peer to Peer</div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-lg-2 my-14">
                    <div class="card">
                        <div class="card-body text-center">
                            <img src="~/images/group-to-group.png" alt="2utoring Classroom" height="100" width="100" />
                            <div class="fw-700 fs-16 mt-14">Group to Group</div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-lg-2 my-14">
                    <div class="card">
                        <div class="card-body text-center">
                            <img src="~/images/whole-classes.png" alt="2utoring Classroom" height="100" width="100" />
                            <div class="fw-700 fs-16 mt-14">Whole Classes</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="Page__Container Page__Container--size:content my-28 my-lg-84">
    <div class="row align-items-center">
        <div class="col-12 col-lg-5 offset-lg-1 text-center">
            <img src="~/images/classroom-controls.png" alt="2utoring Classroom" />
        </div>
        <div class="col-12 col-lg-5">
            <div class="my-lg-35">
                <h2 class="cl-primary fs-50 fw-800">Classroom controls</h2>
                <p class="fs-21 lh-21 fw-500 mt-21">Have total oversight of your class, by selecting exactly what students can and cannot do.</p>
            </div>
        </div>
    </div>
</div>
<div class="Page__Container Page__Container--size:content my-28 my-lg-84">
    <div class="row">
        <div class="col-12 text-center">
            <div class="my-56">
                <h2 class="cl-primary fs-50 fw-800">Keeping everyone safe</h2>
            </div>
        </div>
        <div class="col-12">
            <div class="row">
                <div class="col-12 col-lg-5 my-14 offset-lg-1">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-block d-lg-flex">
                                <img src="~/images/recorded-sessons.png" alt="2utoring Classroom" height="100" width="100" />
                                <div class="ml-lg-28">
                                    <div class="fw-700 fs-16 mt-14">Recorded sessions</div>
                                    <p class="fw-500 fs-16">All lessons are securely recorded to safeguard our students and tutors</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-5 my-14">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-block d-lg-flex">
                                <img src="~/images/safe-and-secure.png" alt="2utoring Classroom" height="100" width="100" />
                                <div class="ml-lg-28">
                                    <div class="fw-700 fs-16 mt-14">Background check</div>
                                    <p class="fw-500 fs-16">Tutors wishing to teach under 18’s, must pass a  DBS background check </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="Page__Container Page__Container--size:content my-56 mt-lg-section mb-lg-section-small">
    <div class="row">
        <div class="col-12 col-lg-5 offset-lg-1 text-center">
            <h2 class="cl-primary fs-50 fw-800">Webcam</h2>
            <p class="fs-21 lh-21 fw-500 mt-21 w-lg-75 mx-auto">Communicate with a student, group or your entire class using our video & audio tool</p>
            <img src="~/images/webcam-panel.png" alt="2utoring Classroom" />
        </div>
        <div class="col-12 col-lg-5 text-center">
            <h2 class="cl-primary fs-50 fw-800">Chat</h2>
            <p class="fs-21 lh-21 fw-500 mt-21 w-lg-75 mx-auto">You can also communicate with your class via our instant text messaging tool</p>
            <img src="~/images/chat.png" alt="2utoring Classroom" />
        </div>
    </div>
</div>

<div class="Page__Container Page__Container--size:content my-56 mt-lg-section mb-lg-section-small">
    <div class="row">
        <div class="col-12">
            <h1 class="cl-primary fs-50 fw-800 my-56 text-center">Our applications</h1>
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/whiteboard-ui.png" alt="First slide">
                        <div class="text-center">
                            <h3 class="fw-700 fs-28 mb-14">Whiteboard</h3>
                            <p class="fw-500 fs-16">Students can collaborate, edit and share using our interactive whiteboards </p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/files-ui.png" alt="First slide">
                        <div class="text-center">
                            <h3 class="fw-700 fs-28 mb-14">Google Drive</h3>
                            <p class="fw-500 fs-16">Send and receive work through our integrated Google Drive folder system</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/docs-ui.png" alt="First slide">
                        <div class="text-center">
                            <h3 class="fw-700 fs-28 mb-14">Docs, Sheets & Slides</h3>
                            <p class="fw-500 fs-16">Work together in real-time on multiple documents, spreadsheets and presentations</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/pane-ui.png" alt="First slide">
                        <div class="text-center">
                            <h3 class="fw-700 fs-28 mb-14">Multiple views</h3>
                            <p class="fw-500 fs-16">Adapt your screen for a more efficient and interactive experience.</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>