@{
    ViewData["Title"] = "2utoring | Online tuturing | Affordable education for all";
}

@section meta{
    <meta content="Transforming education delivery across the globe with 2utoring that brings unseen delivery models and supports life-long learning opportunities for all." name="description">
    <meta content="2utoring | Online tuturing | Affordable education for all" property="og:title">
    <meta content="Transforming education delivery across the globe with 2utoring that brings unseen delivery models and supports life-long learning opportunities for all." property="og:description">
    <meta content="2utoring | Online tuturing | Affordable education for all" property="twitter:title">
    <meta content="Transforming education delivery across the globe with 2utoring that brings unseen delivery models and supports life-long learning opportunities for all." property="twitter:description">
    <meta property="og:type" content="website">
    <meta content="summary_large_image" name="twitter:card">
}

<app-root id="app-angular" app-mode="home-index"></app-root>

@section scripts{

    <environment names="Development">
        <!-- Development versions of Angular (easier to debug) -->
        <script asp-append-version="true" type="text/javascript" src="~/lib/angular/runtime.js"></script>
        <script asp-append-version="true" type="text/javascript" src="~/lib/angular/polyfills.js"></script>
        <script asp-append-version="true" type="text/javascript" src="~/lib/angular/styles.js"></script>
        <script asp-append-version="true" type="text/javascript" src="~/lib/angular/vendor.js"></script>
        <script asp-append-version="true" type="text/javascript" src="~/lib/angular/main.js"></script>
    </environment>

    <environment names="Staging,Production">
        <!-- Production versions of Angular (faster loading) -->
        <script asp-append-version="true" type="text/javascript" src="~/lib/angular/production/runtime.js"></script>
        <script asp-append-version="true" type="text/javascript" src="~/lib/angular/production/polyfills.js"></script>
        <script asp-append-version="true" type="text/javascript" src="~/lib/angular/production/styles.js"></script>
        <script asp-append-version="true" type="text/javascript" src="~/lib/angular/production/main.js"></script>
    </environment>
}