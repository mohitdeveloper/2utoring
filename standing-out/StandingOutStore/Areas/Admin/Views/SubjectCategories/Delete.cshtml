@model StandingOut.Data.Models.SubjectCategory

@{ 
    ViewData["Title"] = "Delete Subject Category";
}

<div class="container-fluid Container--narrow">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card Crud-card Crud-card--delete">     
                <div class="card-body">           
                    <h1 class="card-title">@ViewData["Title"]</h1>
                
                    <div class="row">
                        <div class="col">
                            <form asp-antiforgery="true">
                                <input type="hidden" name="id" asp-for="SubjectCategoryId" />
                                             
                                <div class="col-10 offset-1 text-center">
                                    <p>Please confirm that you wish to delete this?</p>
                                </div>
                                
                                <div class="form-group">                              
                                    <div class="col-8 offset-2">
                                        <div class="row Crud-card__Buttons">
                                            <div class="col-6">
                                                <input type="submit" value="Delete" class="btn btn-danger btn-block" />
                                            </div>
                                            <div class="col-6">
                                                <a asp-action="Index" class="btn btn-light btn-block">Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

