@using StandingOut.Data.Models
@model StandingOut.Data.DTO.CreateUser
@{
    ViewData["Title"] = "Create Admin";
}

<div class="container-fluid Container--narrow">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card Crud-card">
                <div class="card-body">
                    <h1 class="card-title">@ViewData["Title"]</h1>

                    <div class="row">
                        <div class="col">
                            <form asp-antiforgery="true">
                                <div class="form-group row">
                                    <div class="invalid-feedback d-block">
                                        @*<span asp-validation-for="Mod" class="text-danger"></span>*@
                                        @Html.ValidationSummary()
                                    </div>
                                </div>
                                    <div class="form-group row">
                                        <label class="col-4 col-form-label" asp-for="Email"></label>
                                        <div class="col-8">
                                            <input type="text" asp-for="Email" class="form-control" />
                                            <div class="invalid-feedback d-block">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-4 col-form-label" asp-for="FirstName"></label>
                                        <div class="col-8">
                                            <input type="text" asp-for="FirstName" class="form-control" />
                                            <div class="invalid-feedback d-block">
                                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-4 col-form-label" asp-for="LastName"></label>
                                        <div class="col-8">
                                            <input type="text" asp-for="LastName" class="form-control" />
                                            <div class="invalid-feedback d-block">
                                                <span asp-validation-for="LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-8 offset-4">
                                            <div class="row Crud-card__Buttons">
                                                <div class="col-7">
                                                    <input type="submit" value="Create" class="btn btn-success btn-block" />
                                                </div>
                                                <div class="col-5">
                                                    <a asp-action="Index" class="btn btn-light btn-block">Cancel</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

