@using StandingOut.Data.DTO
@using StandingOut.Data.Enums
@model StandingOut.Data.DTO.SubjectStudyLevelSetup
@{
    ViewData["Title"] = "Edit Price";
    var postbackUrl = $"/admin/prices/edit";
    var IndexUrl = ViewData["IndexUrl"];
    if (Model.SubjectStudyLevelSetupType == SubjectStudyLevelSetupType.Tutor && !User.IsInRole("Super Admin"))
        Layout = "../../../Tutor/Views/Shared/_Layout";
}
@section meta{
    <meta name="title" content="@ViewData["Title"]" />
    <meta name="robots" content="noindex">
}

<div class="container-fluid Container--narrow">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card Crud-card">
                <div class="card-body">
                    <h1 class="card-title">@ViewData["Title"]</h1>

                    <div class="row">
                        <div class="col">
                            <form asp-antiforgery="true" action="@postbackUrl" method="post">
                                @Html.ValidationSummary()

                                <input type="hidden" asp-for="OwningEntityId" />
                                <input type="hidden" asp-for="SubjectStudyLevelSetupType" />
                                <input type="hidden" asp-for="SubjectId" />
                                <input type="hidden" asp-for="StudyLevelId" />
                                <input type="hidden" asp-for="SubjectStudyLevelSetupId" />
                                <input type="hidden" asp-for="SubjectName" />
                                <input type="hidden" asp-for="StudyLevelName" />

                                <div class="form-group row">
                                    <label class="col-4 col-form-label" asp-for="SubjectName"></label>
                                    <div class="col-8">
                                        @(Model.SubjectName)
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-4 col-form-label" asp-for="StudyLevelName"></label>
                                    <div class="col-8">
                                        @(Model.StudyLevelName)
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-4 col-form-label" asp-for="PricePerPerson"></label>
                                    <div class="col-8">
                                        <input type="number" asp-for="PricePerPerson" class="form-control" min="0" step="0.1" />
                                        <div class="invalid-feedback d-block">
                                            <span asp-validation-for="PricePerPerson" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>



                                <div class="form-group">
                                    <div class="col-8 offset-4">
                                        <div class="row Crud-card__Buttons">
                                            <div class="col-7">
                                                <input type="submit" value="Save" class="btn btn-success btn-block" />
                                            </div>
                                            <div class="col-5">
                                                <a href="@IndexUrl" class="btn btn-light btn-block">Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


